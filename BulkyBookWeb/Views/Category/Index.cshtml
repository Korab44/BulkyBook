@model IEnumerable<Category>

@{
    ViewData["Title"] = "Index";
}

@if (TempData["success"] != null)
{
    <h2>@TempData["success"]</h2>
}
else
{
    <h1>Index Category</h1>
}


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a input="button" class="btn btn-outline-primary" asp-controller="Category" asp-action="Create"><i class="bi bi-patch-plus"></i> Create a New Category</a>
        </div>
    </div>
    <br />

    <table class="table tabe-bordered table-striped">
        <thead>
            <tr>
                <th>Category Name</th>
                <th>Display Order</th>
                <th></th>
            </tr>
        </thead>
        <tbody>

            @foreach (var obj in Model)
            {
                <tr>
                    <td width="50%">@obj.Name</td>
                    <td width="30%">@obj.DisplayOrder</td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a class="btn btn-outline-primary mx-2" asp-action="Edit" asp-route-id="@obj.Id"><i class="bi bi-pencil"></i> Edit</a>
                        </div>
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a class="btn btn-outline-danger mx-2" asp-action="Delete" asp-route-id="@obj.Id"><i class="bi bi-trash-fill"></i> Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>